<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>eduhub</display-name>
  
  <listener>
    <listener-class>com.eduhub.listener.AppInitializer</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Servlet Mappings for Clean URLs -->
  <servlet>
    <servlet-name>PlacementRecords</servlet-name>
    <jsp-file>/public/placement_records.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>PlacementRecords</servlet-name>
    <url-pattern>/placement_records</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AboutUs</servlet-name>
    <jsp-file>/public/about_us.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AboutUs</servlet-name>
    <url-pattern>/about_us</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/public/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Register</servlet-name>
    <jsp-file>/public/register.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Dashboard</servlet-name>
    <jsp-file>/dashboard.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dashboard</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
</web-app>